{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "IotHubs_evmsdntutoiothub_iothub_name": {
      "defaultValue": "evmsdntutoiothub-iothub",
      "type": "string",
      "minLength": 3,
      "metadata": {
        "description": "Name of the IoT Hub instance to provision."
      }      
    },
    "iotHubConsumerGroupName": {
      "type": "string",
      "minLength": 3,
      "defaultValue": "ericvconsumergroup",
      "metadata": {
        "description": "Name of device-to-cloud consumer group to provision on the IoT Hub instance."
      }
    },
    "iothubNamePrefix": {
      "type": "string",
      "maxLength": 30,
      "defaultValue": "iothub",
      "metadata": {
        "description": "The value to use for starting the iothub account name."
      }
    },
    "storageNameForFunctionPrefix": {
      "type": "string",
      "maxLength": 30,
      "defaultValue": "storagefunc",
      "metadata": {
        "description": "The value to use for starting the storage account name for the function."
      }
    }
  },
  "variables": {
    "iotHubName": "[concat(toLower(parameters('iothubNamePrefix')), uniqueString(resourceGroup().id))]",
    "storageFunctionAccountName": "[concat(toLower(parameters('storageNameForFunctionPrefix')), uniqueString(resourceGroup().id))]"    
  },
  "outputs": {
      "outputIotHubName": {
        "type": "string",
        "value": "[variables('iotHubName')]"
      },
      "outputConsumerGroup": {
        "type": "string",
        "value": "[parameters('iotHubConsumerGroupName')]"
      }
    },
    "resources": [
      {
        "apiVersion": "2016-02-03",
        "name": "[concat(variables('iotHubName'), '/events/',parameters('iotHubConsumerGroupName'))]",
        "type": "Microsoft.Devices/iotHubs/eventhubEndpoints/ConsumerGroups",
        "dependsOn": [
          "[concat('Microsoft.Devices/iothubs/',variables('iotHubName'))]"
        ]
      },
      {
        "comments": "Generalized from resource: '/subscriptions/0e6b6c60-fcdf-46b6-90ab-a02f236df560/resourceGroups/evmsdntutoiothub-rg/providers/Microsoft.Devices/IotHubs/evmsdntutoiothub-iothub'.",
        "type": "Microsoft.Devices/IotHubs",
        "sku": {
          "name": "F1",
          "tier": "Free",
          "capacity": 1
        },
        "name": "[variables('iotHubName')]",
        "apiVersion": "2016-02-03",
        "location": "[resourceGroup().location]",
        "tags": {},
        "scale": null,
        "properties": {
          "operationsMonitoringProperties": {
            "events": {
              "None": "None",
              "Connections": "None",
              "DeviceTelemetry": "None",
              "C2DCommands": "None",
              "DeviceIdentityOperations": "None",
              "FileUploadOperations": "None",
              "Routes": "None"
            }
          },
          "ipFilterRules": [],
          "eventHubEndpoints": {
            "events": {
              "retentionTimeInDays": 1,
              "partitionCount": 2,
              "partitionIds": [
                "0",
                "1"
              ],
              "path": "iothub-ehub-evmsdntuto-208964-e574620478",
              "endpoint": "sb://ihsuproddbres055dednamespace.servicebus.windows.net/"
            },
            "operationsMonitoringEvents": {
              "retentionTimeInDays": 1,
              "partitionCount": 2,
              "partitionIds": [
                "0",
                "1"
              ],
              "path": "iothub-ehub-evmsdntuto-208964-64039c2463",
              "endpoint": "sb://ihsuproddbres012dednamespace.servicebus.windows.net/"
            }
          },
          "routing": {
            "endpoints": {
              "serviceBusQueues": [],
              "serviceBusTopics": [],
              "eventHubs": []
            },
            "routes": [],
            "fallbackRoute": {
              "name": "$fallback",
              "source": "DeviceMessages",
              "condition": "true",
              "endpointNames": [
                "events"
              ],
              "isEnabled": true
            }
          },
          "storageEndpoints": {
            "$default": {
              "sasTtlAsIso8601": "PT1H",
              "connectionString": "",
              "containerName": ""
            }
          },
          "enableFileUploadNotifications": false,
          "cloudToDevice": {
            "maxDeliveryCount": 10,
            "defaultTtlAsIso8601": "PT1H",
            "feedback": {
              "lockDurationAsIso8601": "PT1M",
              "ttlAsIso8601": "PT1H",
              "maxDeliveryCount": 10
            }
          },
          "features": "None"
        },
        "dependsOn": []
      },
      {
        "comments": "Generalized from resource: '/subscriptions/9a96981c-4056-48b7-9301-7c2757548bcf/resourceGroups/step2usestorage-rg/providers/Microsoft.Storage/storageAccounts/stepdeuxiothubstorage'.",
        "type": "Microsoft.Storage/storageAccounts",
        "sku": {
          "name": "Standard_LRS",
          "tier": "Standard"
        },
        "kind": "Storage",
        "name": "[variables('storageFunctionAccountName')]",
        "apiVersion": "2016-01-01",
        "location": "[resourceGroup().location]",
        "tags": {},
        "scale": null,
        "properties": {},
        "dependsOn": []
      }
    ]
}
